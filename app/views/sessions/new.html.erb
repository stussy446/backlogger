<h1>Login Page</h1>
<% if flash[:messages] %>
	<ul>
		<% flash[:messages].each do |message| %>
			<li><%=message%></li>
		<% end %>
	</ul>
<% end %>

<%= form_tag(sessions_path, method: "post") do %>
	<%= label_tag(:username, "Username") %><br>
 	<%= text_field_tag(:username) %><br>

 	<%= label_tag(:password, "Password") %><br>
 	<%= password_field_tag(:password) %><br>

 	<%= submit_tag("Login") %>
<% end %>