<!DOCTYPE html>
<html>
<head>
  <title>Backlogger</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
  <%= render "/flash" %>
  <% if session[:id] %>
  <nav>
    <%= link_to "Go back to Your Logs", user_logs_path(find_user), id:"user-log-link", class: "button" %>
    <%= link_to "Choose From Already Created Items", items_path, class: "button" %>
    <%= link_to "Create a Custom Item", new_item_path, class: "button" %>
    <%= render '/sessions/delete' %>
  </nav>
  <head>
    <h5><%= find_user.username %> Total Logs Complete: <%= find_user.total_complete %></h5>
  </head>
  <% else %>
  <nav>
    <%= link_to "Sign Up Here!", new_user_path, id: "sign-up-link", class: "button" %>
    <%= link_to "Go to Login Page", root_path, id: "login-page-btn", class: "button" %>
  </nav>
  <% end %>
  <%= yield %>
</body>
</html>
